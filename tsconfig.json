{
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": false,
    "strict": false,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "rootDir": "./src", 
    "types": ["@league-of-foundry-developers/foundry-vtt-types/index-lenient", "jest"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["gulpfile.ts","dist"]
}
